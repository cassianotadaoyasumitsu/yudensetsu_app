<div class="row justify-content-center">
  <%= image_tag "logo.png", class: "p-5" %>
</div>
<div class="d-flex flex-column align-items-center">
  <%= link_to 'Voltar', root_path, class: 'btn btn-info btn-sm m-2' %>
  <%= link_to 'Criar Novo FuncionÃ¡rio', new_user_path, class: 'btn btn-primary btn-sm m-2' %>
</div>
<ul class="list-group m-2">
  <% @users.order(:name).each do |user| %>
  <li class="list-group-item">
    <div class="row justify-content-between align-items-center">
      <div>
        <%= user.name %>
      </div>
      <div>
        <%= link_to 'Visualizar', user_path(user), class: 'btn btn-success btn-sm' %>
        <%= link_to 'Editar', edit_user_path(user), class: 'btn btn-secondary btn-sm' %>
        <%= link_to 'Deletar', user_path(user), class: 'btn btn-danger btn-sm', method: :delete, data: { confirm: 'Tem certeza?' } %>
      </div>
    </div>
  </li>
  <% end %>
</ul>
