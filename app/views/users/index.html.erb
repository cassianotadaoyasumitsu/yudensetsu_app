<div class="row justify-content-center">
  <%= image_tag "logo.png", class: "p-5" %>
</div>
<div class="row justify-content-center align-items-center">
  <div>
    <%= form_tag users_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find a user"
    %>
  </div>
  <div>
    <%= submit_tag "Search", class: "btn btn-success btn-sm m-2" %>
    <% end %>
  </div>
</div>
<div class="d-flex flex-column align-items-center">
  <%= link_to 'Back', root_path, class: 'btn btn-info btn-sm m-2' %>
  <%= link_to 'New Employee', new_user_path, class: 'btn btn-primary btn-sm m-2' %>
</div>
<ul class="list-group m-2">
  <% @users.order(:name).each do |user| %>
  <li class="list-group-item">
    <div class="row justify-content-between align-items-center">
      <div>
        <%= user.name %> / <%= user.furigana %>
      </div>
      <div>
        <%= link_to 'View', user_path(user), class: 'btn btn-success btn-sm' %>
        <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-secondary btn-sm' %>
        <%= link_to 'Delete', user_path(user), class: 'btn btn-danger btn-sm', method: :delete, data: { confirm: 'Are you sure?' } %>
        <%= link_to 'Time Card', user_puntos_path(user), class: 'btn btn-info btn-sm' %>
      </div>
    </div>
  </li>
  <% end %>
</ul>
