<div class="row justify-content-center">
  <%= image_tag "logo.png", class: "p-5" %>
</div>
<div class="d-flex flex-column align-items-center">
  <%= link_to 'Voltar', users_path, class: ' btn btn-info btn-sm' %>
</div>
<div class="user-view">
  <div class="user-name lead">
    <p><%= @user.name %></p>
    <p><%= @user.furigana %> </p>
    <p><% @user.photos.each do |photo| %>
      <%= cl_image_tag photo.key, height: 150, width: 100, crop: :fill %>
      <% end %>
    </p>
  </div>
  <div class="user">
    <p>Address: <span><%= @user.address %></span> </p>
  </div>
  <div class="user">
    <p>Pay Number: <span><%= @user.pay_number %></span>  </p>
    <p>Phone: <span><%= @user.phone %></span></p>
    <p>Email: <span><%= @user.email %></span></p>
  </div>
  <div class="user">
    <p>Role: <span><%= @user.role %></span> </p>
    <p>Level: <span><%= @user.level_employee %></span> </p>
    <p>Started at: <span><%= @user.started_date %></span> </p>
    <p>Job Exp: <span><%= @user.job_exp %></span> </p>
  </div>
  <div class="user">
    <p>Licence?: <span><%= @user.licence1  ? 'Yes 🙆🏻‍♂️' : 'No 🙅🏻‍♂️'  %></span> </p>
    <p>Licence?: <span><%= @user.licence2  ? 'Yes 🙆🏻‍♂️' : 'No 🙅🏻‍♂️'  %></span> </p>
    <p>Licence?: <span><%= @user.licence3  ? 'Yes 🙆🏻‍♂️' : 'No 🙅🏻‍♂️'  %></span> </p>
    <p>Licence?: <span><%= @user.licence4  ? 'Yes 🙆🏻‍♂️' : 'No 🙅🏻‍♂️'  %></span> </p>
  </div>
  <div class="user">
    <p>Driver Licence: <span><%= @user.licence5 %></span> </p>
    <p>Driver Licence Venc.: <span><%= @user.drive_licence %></span> </p>
  </div>
  <div class="user">
    <p>Exame Médico: <span><%= @user.healthy_exam %></span> </p>
  </div>
  <div class="user">
    <p>Zairyo Card: <span><%= @user.document %></span> </p>
    <p>Vencimento: <span><%= @user.document_date %></span> </p>
  </div>
  <div class="user">
    <p>Passaport: <span><%= @user.passport %></span> </p>
    <p>Vencimento: <span><%= @user.passport_date %></span> </p>
  </div>
  <div class="user">
    <p>Final de semana: <span><%= @user.weekend ? 'Yes 🙆🏻‍♂️' : 'No 🙅🏻‍♂️' %></span> </p>
    <p>Noturno: <span><%= @user.night_shift ? 'Yes 🙆🏻‍♂️' : 'No 🙅🏻‍♂️' %></span> </p>
    <p>Active User: <span><%= @user.active ? 'Yes 🙆🏻‍♂️' : 'No 🙅🏻‍♂️' %></span> </p>
  </div>
  <div class="user">
    <p>Password: <span><%= @user.password %></span> </p>
  </div>
</div>
