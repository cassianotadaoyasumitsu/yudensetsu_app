<%= simple_form_for(user) do |f| %>
<%= f.input :photos, as: :file, input_html: { multiple: true } %>
<%= f.input :admin %>
<%= f.input :name, label: '氏名 (Nome Completo):' %>
<%= f.input :furigana %>
<%= f.input :address %>
<%= f.input :phone %>
<%= f.input :email %>
<% if @user.persisted? %>
<% else %>
<%= f.input :password %>
<% end %>
<%= f.input :role, collection: User::ROLES %>
<%= f.input :level_employee, collection: 1..5 %>
<%= f.input :started_date %>
<%= f.input :job_exp %>
<%= f.input :pay_number %>
<%= f.input :licence1, as: :boolean %>
<%= f.input :licence2, as: :boolean %>
<%= f.input :licence3, as: :boolean %>
<%= f.input :licence4, as: :boolean %>
<%= f.input :licence5, as: :boolean, label: 'Driver Licence:' %>
<%= f.input :drive_licence %>
<%= f.input :healthy_exam %>
<%= f.input :document, label: 'Zairyo Card'  %>
<%= f.input :document_date, label: 'Vencimento' %>
<%= f.input :passport %>
<%= f.input :passport_date, label: 'Vencimento' %>
<%= f.input :active %>
<%= f.input :weekend %>
<%= f.input :night_shift %>
<%= f.submit @user.persisted? ? 'Editar' : 'Criar', class: 'btn btn-primary btn-sm w-100' %>
<% end %>
