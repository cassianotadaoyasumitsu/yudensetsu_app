<%= simple_form_for (punto) do |f| %>
<div class="user-view">
  <% if punto.in && punto.genba %>
  <div class="row justify-content-around user">
    <%= f.input :day, as: :hidden %>
    <%= f.input :night, as: :hidden %>
    <%= f.input :day_off, as: :hidden %>
  </div>
  <%= f.input :out, as: :time, html5: true, input_html: { value: Time.now.strftime("%k:%M") } %>
  <%= f.input :note %>
  <%= f.submit "Check Out", class: 'btn btn-primary btn-sm w-100' %>
  <% else %>
  <%= form_with url: new_punto_path do |company_form| %>
  <%= company_form.select :company, Company.all.map{ |cpy| cpy.name }, prompt: (@current_company.nil? ? 'Select a company' : @current_company.name) %>
  <% end %>
  <% unless @current_company.nil? %>
  <%= f.association :genba, label: 'Genbas', collection: @current_company.genbas %>
  <% end %>
  <div class="row justify-content-around user">
    <%= f.input :day %>
    <%= f.input :night %>
    <%= f.input :day_off %>
  </div>
  <%= f.input :in, as: :time, html5: true, input_html: { value: Time.now.strftime("%k:%M") } %>
  <%= f.input :note, as: :hidden %>
  <%= f.submit "Check In", class: 'btn btn-primary btn-sm w-100' %>
  <% end %>
</div>
<% end %>
