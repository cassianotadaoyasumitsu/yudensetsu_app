<div class="row justify-content-center">
  <%= image_tag "logo.png", class: "p-5" %>
</div>
<div class="d-flex flex-column align-items-center">
  <%= link_to '戻る', root_path, class: ' btn btn-info btn-sm' %>
</div>

<%= simple_form_for @punto do |f| %>
<div class="user-view">
  <%= f.input :date, label: "日付", as: :date %>
  <%= f.input :in, label: "出勤", as: :time, html5: true  %>
  <%= f.input :out, label: "退勤", as: :time, html5: true %>
  <%= f.association :genba, label: '現場', collection: Genba.all %>
  <%= f.input :period, label: "シフト", collection: Punto::PERIOD %>
  <%= f.input :note, label: "注意" %>
  <%= f.submit "更新", class: 'btn btn-primary btn-sm w-100' %>
</div>
<% end %>

