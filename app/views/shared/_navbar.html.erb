<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to image_tag("icon.png"), root_path, class: "navbar-brand" %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
      <li class="nav-item m-2">
        <%= current_user.name %>
      </li>
      <% if current_user.admin == true  %>
      <li class="nav-item dropdown">
        <%= image_tag "avatar.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Relatório", punto_path(current_user), class: "dropdown-item" %>
          <%= link_to "Admin", rails_admin_path, class: "dropdown-item" %>
          <%= link_to "Sair", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </li>
      <% else %>
      <li class="nav-item dropdown">
        <%= image_tag "avatar.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Relatório", punto_path(current_user), class: "dropdown-item" %>
          <%= link_to "Sair", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </li>
        <% end %>
        <% end %>
    </ul>
  </div>
</div>
