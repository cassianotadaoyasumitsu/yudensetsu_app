<div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top">
  <%= link_to image_tag("icon.png"), root_path, class: "navbar-brand" %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
      <li class="nav-item m-2">
        <div class="d-flex p-1">
          <%= current_user.name %>
        </div>
      </li>
      <% if current_user.admin %>
      <li class="nav-item m-2">
        <div class="d-flex">
          <%= link_to "レポート", user_puntos_path(current_user), class: "dropdown-item" %>
          <%= link_to "管理者", rails_admin_path, class: "dropdown-item" %>
          <%= link_to "出口", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </li>
      <li class="nav-item dropdown">
        <% if current_user.photos.attached? %>
        <%= cl_image_tag current_user.photos[0].key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% else %>
        <%= image_tag "avatar.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% end %>
      </li>
      <% else %>
      <li class="nav-item m-2">
        <div class="d-flex">
          <%= link_to "レポート", user_puntos_path(current_user), class: "dropdown-item" %>
          <%= link_to "出口", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </li>
      <li class="nav-item dropdown">
        <% if current_user.photos.attached? %>
        <% current_user.photos.each do |photo| %>
        <%= cl_image_tag photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% end %>
        <% else %>
        <%= image_tag "avatar.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% end %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Action", "#", class: "dropdown-item" %>
          <%= link_to "Another action", "#", class: "dropdown-item" %>
        </div>
      </li>
      <% end %>
      <% end %>
    </ul>
  </div>
</div>
