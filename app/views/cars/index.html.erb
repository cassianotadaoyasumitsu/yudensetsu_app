<div class="row justify-content-center">
  <%= image_tag "logo.png", class: "p-5" %>
</div>
<div class="d-flex flex-column align-items-center">
  <%= link_to 'Back', root_path, class: 'btn btn-info btn-sm m-2' %>
  <%= link_to 'New Car', new_car_path, class: 'btn btn-primary btn-sm m-2' %>
</div>

<table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Number</th>
        <th scope="col">Car</th>
        <th scope="col">Plate</th>
        <th scope="col">Fuel</th>
        <th scope="col">Oil</th>
        <th scope="col">Punto</th>
      </tr>
    </thead>
    <% @cars.each do |car| %>
    <tbody>
      <tr>
        <th scope="row"><%= car.car_number %></th>
        <td><%= car.car_name %></td>
        <td><%= car.car_plate %></td>
      </tr>
    </tbody>
    <% end %>
  </table>
