<div class="row justify-content-center">
  <%= image_tag "logo.png", class: "p-5" %>
</div>
<div class="d-flex flex-column align-items-center">
  <%= link_to '戻る', root_path, class: 'btn btn-info btn-sm m-2' %>
  <% if current_user.admin %>
  <%= link_to '車を作る', new_car_path, class: 'btn btn-primary btn-sm m-2' %>
  <% end %>
</div>

<table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">番号</th>
        <th scope="col">車</th>
        <th scope="col">プレート</th>
        <th scope="col">車レポート</th>
        <th scope="col">車のカード</th>
      </tr>
    </thead>
    <% @cars.each do |car| %>
    <tbody>
      <tr>
        <th scope="row"><%= car.car_number %></th>
        <td><%= car.car_name %></td>
        <td><%= car.car_plate %></td>
        <td><%= link_to '車レポート', car_path(car), class: 'btn btn-secondary btn-sm' %></td>
        <td><%= link_to '車のカード', new_car_carpunto_path(car), class: 'btn btn-success btn-sm' %></td>

      </tr>
    </tbody>
    <% end %>
  </table>
