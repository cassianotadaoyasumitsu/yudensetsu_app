<div class="row justify-content-center">
  <%= image_tag "logo.png", class: "p-5" %>
</div>
<div class="d-flex flex-column align-items-center">
  <%= link_to '戻る', cars_path, class: ' btn btn-info btn-sm m-2' %>
</div>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">運転者</th>
      <th scope="col">日付</th>
      <th scope="col">最初のKM</th>
      <th scope="col">最後のKM</th>
      <th scope="col">油</th>
      <th scope="col">燃料</th>
    </tr>
  </thead>
  <% @car.carpuntos.each do |carpunto| %>
  <tbody>
    <tr>
      <th scope="row"><%= carpunto.driver %></th>
      <td><%= carpunto.oiltime.strftime("%d/%m/%Y") %></td>
      <td><%= carpunto.start %></td>
      <td><%= carpunto.end %></td>
      <td><% if carpunto.oil %>
        🛢
        <% end %> </td>
        <td><% if carpunto.fuel %>
          ⛽️
          <% end %></td>
        </tr>
      </tbody>
      <% end %>
    </table>
