<div class="container d-flex flex-column mt-5 align-items-center">
  <div class="row justify-content-center">
    <%= image_tag "logo.png", alt: "alttext", class: 'p-5 mt-5' %>
  </div>
  <%= link_to 'Voltar', root_path, class: 'btn btn-info btn-sm m-2' %>
  <%= link_to 'Criar Nova Empresa', new_company_path, class: 'btn btn-primary btn-sm w-50 m-2' %>
  <ul class="list-group mb-3">
    <% @companies.each do |company| %>
    <li class="list-group-item">
      <div class="row justify-content-between align-items-center">
        <div>
          <strong><%= company.name %></strong>
        </div>
        <div>
          <%= link_to 'Visualizar', company_path(company), class: 'btn btn-primary' %>
          <%= link_to 'Editar', edit_company_path(company), class: 'btn btn-secondary' %>
          <%= link_to 'Deletar', company_path(company),
          method: :delete,
          data: { confirm: 'Tem certeza?' },
          class: 'btn btn-danger' %>
        </div>
      </div>
    </li>
    <% end %>
  </ul>
</div>
