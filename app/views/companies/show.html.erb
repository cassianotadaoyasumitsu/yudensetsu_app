<div class="row justify-content-center">
  <%= image_tag "logo.png", class: "p-5" %>
</div>
<div class="d-flex flex-column align-items-center">
  <%= link_to '戻る', companies_path, class: ' btn btn-info btn-sm' %>
</div>
<div class="company-view">
  <div class="company-name lead">
    <p><%= @company.name %></p>
    <p><%= @company.furigana %></p>
  </div>

<div class="company">
  <p>社長 <span><%= @company.ceo %></span></p>
  </div>
  <div class="company">
  <p>住所 <span><%= @company.address %></span></p>
  </div>
  <div class="company">
  <p>住所 <span><%= @company.address2 %></span></p>
  </div>
  <div class="company">
  <p>担当者 <span><%= @company.contact %></span></p>
  <p>電話 <span><%= @company.phone %></span></p>
  </div>
  <div class="company">
  <p>ファックス <span><%= @company.fax %></span></p>
  <p>Eメール <span><%= @company.email %></span></p>
  </div>
  <div class="company">
  <p>閉鎖日 <span><%= @company.closure %></span></p>
  </div>




  <div class="d-flex flex-column align-items-center">
    <%= link_to '新現場', new_company_genba_path(@company), class: 'btn btn-primary mb-5'  %>
  </div>

  <div class="row justify-content-around">
    <% @company.genbas.each do |genba| %>
    <div class="card text-center mb-5">
      <div class="card-header">
       現場名 <%= genba.name %>
     </div>
     <div class="card-body">
      <p class="card-title"> <span>Contact: </span> <%= genba.contact %></p>
      <p class="card-text">
        住所 <%= genba.address %>
      </p>
      <p>閉鎖日 <%= genba.closure %></p>
    </div>
    <div class="card-footer text-muted">
      電話 <%= genba.phone %>
    </div>
  </div>
  <% end %>
</div>


</div>

